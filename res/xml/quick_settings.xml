<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/quicksettings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <Preference
            android:key="qs_rows_columns"
            android:fragment="com.colt.settings.fragments.QsRowsColumns"
            android:title="@string/qs_rows_columns_title"/>

   <com.colt.settings.preferences.SystemSettingSwitchPreference
        android:key="status_bar_quick_qs_pulldown"
        android:title="@string/status_bar_quick_qs_pulldown"
        android:summary="@string/status_bar_quick_qs_pulldown_summary"
        android:defaultValue="true" />

   <com.colt.settings.preferences.SystemSettingSwitchPreference
        android:key="qs_footer_warnings"
        android:title="@string/qs_footer_warnings_title"
        android:summary="@string/qs_footer_warnings_summary"
        android:defaultValue="true" />


</PreferenceScreen>
